@model MVCMovies.Models.MovieGenreViewModel

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>
<p>
	<a asp-action="Create">Create New</a>
</p>
<form asp-controller="Movies" asp-action="Index">
	<input type="search" name="SearchString" value="" placeholder="Search any movie" class="form-control w-25 d-inline" />
	<select asp-for="MovieGenre" asp-items="Model.Genres" class="form-select w-25">
		<option value="">
			All
		</option>
	</select>
	<button type="submit" class="btn btn-primary mx-2 btn-md">
		Search
	</button>
</form>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Movies![0].Title)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Movies![0].Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Movies![0].RelaseDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Movies![0].Genre)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Movies![0].Price)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Movies![0].Rating)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Movies!)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.RelaseDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Genre)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Price)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Rating)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
